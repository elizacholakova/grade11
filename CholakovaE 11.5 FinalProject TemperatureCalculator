import javax.swing.*;
import java.awt.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

public class Main {
    public static void main(String[] args) {
        JFrame frame = new JFrame();
        frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        frame.setSize(1000, 1000);
        frame.getContentPane().setBackground(Color.PINK);
        frame.setLayout(null);
        frame.setVisible(true);


        JLabel topic = new JLabel("Temperature Calculator");
        topic.setFont(new Font("Arial", Font.BOLD, 40));
        topic.setBounds(260, 90, 500, 100);
        frame.add(topic);

        JLabel instructions = new JLabel("Write a temperature in celsius:");
        instructions.setFont(new Font("Arial", Font.BOLD, 20));
        instructions.setBounds(335, 140, 500, 100);
        frame.add(instructions);

        JTextField input = new JTextField();
        input.setFont(new Font("Arial", Font.BOLD, 20));
        input.setBounds(390, 225, 200, 50);
        frame.add(input);

        JButton far = new JButton("Farenheit");
        far.setFont(new Font("Arial", Font.BOLD, 20));
        far.setBounds(325, 300, 150, 50);
        frame.add(far);

        JButton kelvin = new JButton("Kelvin");
        kelvin.setFont(new Font("Arial", Font.BOLD, 20));
        kelvin.setBounds(500, 300, 150, 50);
        frame.add(kelvin);

        JLabel result = new JLabel("");
        result.setFont(new Font("Arial", Font.BOLD, 20));
        result.setBounds(350, 228, 600, 300);
        frame.add(result);

        JButton empty = new JButton("Empty");
        empty.setFont(new Font("Arial", Font.BOLD, 20));
        empty.setBounds(410, 410, 150, 50);
        frame.add(empty);

        JButton exit = new JButton("Exit");
        exit.setFont(new Font("Arial", Font.BOLD, 20));
        exit.setBounds(410, 470, 150, 50);
        frame.add(exit);

        far.addActionListener(new ActionListener() {
            @Override
            public void actionPerformed(ActionEvent e) {
                try {
                    String userInput = input.getText();
                    double number = Double.parseDouble(userInput);
                    double finalFar = number + 33.8;
                    result.setText("Converted to Farenheit: " + finalFar);

                } catch (NumberFormatException ex) {
                    result.setText("Please enter a valid number.");

                }
            }
        });
        kelvin.addActionListener(new ActionListener() {
            @Override
            public void actionPerformed(ActionEvent e) {
                try {
                    String userinput = input.getText();
                    double number = Double.parseDouble(userinput);
                    double finalKelvin = number + 274.15;
                    result.setText("Converted to Kelvin: " + finalKelvin);
                } catch (NumberFormatException ex) {
                    result.setText("Please enter a valid number.");
                }
            }
        });
        empty.addActionListener(new ActionListener() {
            public void actionPerformed(ActionEvent e) {
                    input.setText("");
                    result.setText(" ");
            }
        });

        exit.addActionListener(new ActionListener(){
            public void actionPerformed(ActionEvent e) {
                System.exit(0);
            }
            });
    }
    }
